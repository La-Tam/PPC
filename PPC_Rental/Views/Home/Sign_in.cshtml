
@{
    ViewBag.Title = "Sign_in";
}
<head>
    <title>Log-in</title>
    <style type="text/css">
        .style2 {
            width: 199px;
            height: 50px;
        }

        #Select4 {
            width: 230px;
        }

        #Text7 {
            width: 230px;
        }

        #Text8 {
            width: 230px;
        }

        #Text9 {
            width: 230px;
        }

        #Text10 {
            width: 230px;
        }

        #Text3 {
            width: 230px;
        }

        #Text2 {
            width: 230px;
        }

        #Text1 {
            width: 230px;
        }
    </style>
    <style>
        table {
            background-color: Black;
            color: Yellow
        }

        .style5 {
            height: 40px;
        }

        .style6 {
            height: 50px;
        }
    </style>
